<!DOCTYPE html>
<html>
  <head>
    <title>Book Club Registration</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >
  </head>
  <body class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="form-container bg-white p-4 rounded shadow" style="width: 400px;">
      <h1 class="text-center mb-4 text-primary">üìö Book Club</h1>

      <form method="POST" action="/register" novalidate>
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= typeof name !== 'undefined' ? name : '' %>">
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="text" class="form-control" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>">
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password">
        </div>

        <button type="submit" class="btn btn-primary w-100">Register</button>
      </form>
    </div>

    <!-- Modal for validation errors -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h5 class="modal-title" id="errorModalLabel">‚ö†Ô∏è Validation Errors</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <ul class="list-unstyled mb-0">
              <% if (errors && errors.length > 0) { %>
                <% errors.forEach(function(error) { %>
                  <li>‚Ä¢ <%= error.msg %></li>
                <% }) %>
              <% } %>
            </ul>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <% if (errors && errors.length > 0) { %>
      <script>
        const errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
        errorModal.show();
      </script>
    <% } %>
  </body>
</html>
